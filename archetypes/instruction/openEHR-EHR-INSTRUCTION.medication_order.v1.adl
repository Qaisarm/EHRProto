definition
    INSTRUCTION[at0000] matches {    -- Medication Order
        activities cardinality matches {0..*; unordered} matches {
            ACTIVITY[at0001] occurrences matches {0..1} matches {    -- Order
                description matches {
                    ITEM_TREE[at0002] matches {    -- Tree
                        items cardinality matches {1..*; unordered} matches {
                            ELEMENT[at0003] matches {    -- Medication Name
                                value matches {
                                    DV_TEXT matches {*}
                                    DV_CODED_TEXT matches {*}
                                }
                            }
                            ELEMENT[at0004] occurrences matches {0..1} matches {    -- Medication Form
                                value matches {
                                    DV_CODED_TEXT matches {
                                        defining_code matches {
                                            [local::
                                            at0005,    -- Tablet
                                            at0006,    -- Capsule
                                            at0007,    -- Liquid
                                            at0008,    -- Injection
                                            at0009,    -- Cream
                                            at0010,    -- Ointment
                                            at0011]    -- Inhaler
                                        }
                                    }
                                }
                            }
                            CLUSTER[at0012] occurrences matches {0..1} matches {    -- Dose
                                items cardinality matches {1..*; unordered} matches {
                                    ELEMENT[at0013] occurrences matches {0..1} matches {    -- Dose Amount
                                        value matches {
                                            DV_QUANTITY matches {*}
                                        }
                                    }
                                    ELEMENT[at0014] occurrences matches {0..1} matches {    -- Dose Unit
                                        value matches {
                                            DV_TEXT matches {*}
                                        }
                                    }
                                }
                            }
                            ELEMENT[at0015] occurrences matches {0..1} matches {    -- Route
                                value matches {
                                    DV_CODED_TEXT matches {
                                        defining_code matches {
                                            [local::
                                            at0016,    -- Oral
                                            at0017,    -- Intravenous
                                            at0018,    -- Intramuscular
                                            at0019,    -- Subcutaneous
                                            at0020,    -- Topical
                                            at0021,    -- Inhalation
                                            at0022]    -- Rectal
                                        }
                                    }
                                }
                            }
                            ELEMENT[at0023] occurrences matches {0..1} matches {    -- Frequency
                                value matches {
                                    DV_TEXT matches {*}
                                    DV_CODED_TEXT matches {
                                        defining_code matches {
                                            [local::
                                            at0024,    -- Once daily
                                            at0025,    -- Twice daily
                                            at0026,    -- Three times daily
                                            at0027,    -- Four times daily
                                            at0028,    -- As needed
                                            at0029]    -- Every hour
                                        }
                                    }
                                }
                            }
                            ELEMENT[at0030] occurrences matches {0..1} matches {    -- Duration
                                value matches {
                                    DV_DURATION matches {*}
                                }
                            }
                            ELEMENT[at0031] occurrences matches {0..1} matches {    -- Start Date
                                value matches {
                                    DV_DATE_TIME matches {*}
                                }
                            }
                            ELEMENT[at0032] occurrences matches {0..1} matches {    -- Stop Date
                                value matches {
                                    DV_DATE_TIME matches {*}
                                }
                            }
                            ELEMENT[at0033] occurrences matches {0..1} matches {    -- Clinical Indication
                                value matches {
                                    DV_TEXT matches {*}
                                }
                            }
                            ELEMENT[at0034] occurrences matches {0..1} matches {    -- Special Instructions
                                value matches {
                                    DV_TEXT matches {*}
                                }
                            }
                            ELEMENT[at0035] occurrences matches {0..1} matches {    -- Order Status
                                value matches {
                                    DV_CODED_TEXT matches {
                                        defining_code matches {
                                            [local::
                                            at0036,    -- Active
                                            at0037,    -- Suspended
                                            at0038,    -- Completed
                                            at0039]    -- Cancelled
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
        protocol matches {
            ITEM_TREE[at0040] matches {    -- Tree
                items cardinality matches {0..*; unordered} matches {
                    ELEMENT[at0041] occurrences matches {0..1} matches {    -- Order ID
                        value matches {
                            DV_TEXT matches {*}
                        }
                    }
                }
            }
        }
    }

