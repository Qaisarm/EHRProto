    details = <
        ["en"] = <
            language = <[ISO_639-1::en]>
            purpose = <"To record an instruction for the ordering, prescribing, dispensing and administration of medication">
            use = <"Use to record medication orders including dosage, frequency, route, and duration">
            keywords = <"medication", "prescription", "drug", "order", "pharmaceutical">
            misuse = <"Not to be used for recording actual administration - use medication action archetype instead">
        >
    >
    lifecycle_state = <"draft">
