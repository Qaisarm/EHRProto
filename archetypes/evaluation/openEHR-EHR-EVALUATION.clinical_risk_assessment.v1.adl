concept
    [at0000]    -- Clinical Risk Assessment

language
    original_language = <[ISO_639-1::en]>

description
    original_author = <
        ["name"] = <"Clinical Team">
        ["organisation"] = <"Healthcare Organization">
        ["email"] = <"clinical@example.com">
        ["date"] = <"2025-09-30">
    >
    details = <
        ["en"] = <
            language = <[ISO_639-1::en]>
            purpose = <"To record the results of a clinical risk assessment for a specific health condition or outcome">
            use = <"Use to record risk assessments for various clinical conditions such as cardiovascular disease, falls, pressure ulcers, etc.">
            keywords = <"risk", "assessment", "evaluation", "screening", "score">
            misuse = <"Not to be used for recording actual diagnoses - use problem/diagnosis archetype instead">
        >
    >
    lifecycle_state = <"draft">
    other_details = <
        ["MD5-CAM-1.0.1"] = <"D4E5F6G7H8I9J0K1L2M3N4O5P6Q7R8S9">
    >

definition
    EVALUATION[at0000] matches {    -- Clinical Risk Assessment
        data matches {
            ITEM_TREE[at0001] matches {    -- Tree
                items cardinality matches {1..*; unordered} matches {
                    ELEMENT[at0002] matches {    -- Risk Assessment Type
                        value matches {
                            DV_TEXT matches {*}
                            DV_CODED_TEXT matches {*}
                        }
                    }
                    ELEMENT[at0003] occurrences matches {0..1} matches {    -- Risk Category
                        value matches {
                            DV_CODED_TEXT matches {
                                defining_code matches {
                                    [local::
                                    at0004,    -- Low Risk
                                    at0005,    -- Moderate Risk
                                    at0006,    -- High Risk
                                    at0007]    -- Very High Risk
                                }
                            }
                        }
                    }
                    ELEMENT[at0008] occurrences matches {0..1} matches {    -- Risk Score
                        value matches {
                            DV_QUANTITY matches {*}
                            DV_COUNT matches {*}
                        }
                    }
                    ELEMENT[at0009] occurrences matches {0..1} matches {    -- Risk Percentage
                        value matches {
                            DV_PROPORTION matches {
                                numerator matches {|0.0..100.0|}
                                denominator matches {|100.0|}
                                type matches {2}
                            }
                        }
                    }
                    CLUSTER[at0010] occurrences matches {0..*} matches {    -- Risk Factors
                        items cardinality matches {1..*; unordered} matches {
                            ELEMENT[at0011] occurrences matches {0..1} matches {    -- Risk Factor
                                value matches {
                                    DV_TEXT matches {*}
                                }
                            }
                            ELEMENT[at0012] occurrences matches {0..1} matches {    -- Presence
                                value matches {
                                    DV_BOOLEAN matches {*}
                                }
                            }
                            ELEMENT[at0013] occurrences matches {0..1} matches {    -- Description
                                value matches {
                                    DV_TEXT matches {*}
                                }
                            }
                        }
                    }
                    ELEMENT[at0014] occurrences matches {0..1} matches {    -- Assessment Date
                        value matches {
                            DV_DATE_TIME matches {*}
                        }
                    }
                    ELEMENT[at0015] occurrences matches {0..1} matches {    -- Next Review Date
                        value matches {
                            DV_DATE_TIME matches {*}
                        }
                    }
                    ELEMENT[at0016] occurrences matches {0..1} matches {    -- Recommendations
                        value matches {
                            DV_TEXT matches {*}
                        }
                    }
                    ELEMENT[at0017] occurrences matches {0..1} matches {    -- Comment
                        value matches {
                            DV_TEXT matches {*}
                        }
                    }
                }
            }
        }
        protocol matches {
            ITEM_TREE[at0018] matches {    -- Tree
                items cardinality matches {0..*; unordered} matches {
                    ELEMENT[at0019] occurrences matches {0..1} matches {    -- Assessment Tool
                        value matches {
                            DV_TEXT matches {*}
                        }
                    }
                }
            }
        }
    }

